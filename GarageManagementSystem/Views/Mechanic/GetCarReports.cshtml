    <script>
        $(document).ready(function() {
            // Cache DOM elements
            var searchInput = $('#searchInput');
            var clearButton = $('.search-container .btn-outline-secondary');

            // Function to highlight text in an element
            function highlightText(element, searchTerm) {
                if (!searchTerm || searchTerm.trim() === '') return;
                var html = $(element).html();
                if (!html) return;
                var regex = new RegExp('(' + searchTerm.replace(/[.*+?^${}()|[\]\\]/g, '\\$&') + ')', 'gi');
                var newHtml = html.replace(regex, '<span class="highlight">$1</span>');
                $(element).html(newHtml);
            }

            // Function to perform dynamic search with highlighting
            function performSearch() {
                var searchTerm = searchInput.val().trim();
                if (searchTerm === '') return;
                $('.accordion-button strong').each(function() {
                    highlightText(this, searchTerm);
                });
                $('.service-section p').each(function() {
                    highlightText(this, searchTerm);
                });
                $('.accordion-button:first').removeClass('collapsed').attr('aria-expanded', 'true');
                $('.accordion-collapse:first').addClass('show');
            }

            // Execute search on page load if URL has search parameter
            var urlParams = new URLSearchParams(window.location.search);
            var initialSearch = urlParams.get('searchTerm');
            if (initialSearch) {
                performSearch();
            }

            // Add keyboard navigation
            $(document).on('keydown', function(e) {
                if (e.key === 'Escape' && searchInput.val().trim() !== '') {
                    searchInput.val('');
                    searchInput.closest('form').submit();
                }
                if (e.ctrlKey && e.key === 'f') {
                    e.preventDefault();
                    searchInput.focus();
                }
            });
        });

        // Enhanced keyboard shortcuts (removed print shortcut)
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 'n') {
                e.preventDefault();
                window.location.href = '@Url.Action("CreateMechanicReport", "Mechanic")';
            }
        });
    </script>
