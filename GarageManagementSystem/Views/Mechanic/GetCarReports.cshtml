                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-car-alt mr-2"></i> @(isSearching ? "Search Results" : "Car Service Reports")
                    </h6>
                </div>
                <div class="card-body">
                    @if (reportsByCar.Any())
                    {
                        <div class="accordion @(isSearching ? "search-active" : "")" id="accordionCarReports">
                            @foreach (var carGroup in reportsByCar)
