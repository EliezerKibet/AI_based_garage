                                                                    <p class="mb-0">@report.ServiceDetails</p>
                                                                </div>
                                                                <div class="mb-3">
                                                                    <h5 class="text-primary">
                                                                        <i class="fas fa-sticky-note me-2"></i>Additional Notes
                                                                    </h5>
                                                                    <p class="mb-0">@report.AdditionalNotes</p>
                                                                </div>
                                                                <div class="mb-3">
                                                                    <h5 class="text-primary">
                                                                        <i class="fas fa-dollar-sign me-2"></i>Service Fee
                                                                    </h5>
                                                                    <p class="mb-0">RM @report.ServiceFee.ToString("F2")</p>
                                                                </div>
                                                            </div>
                                                            <!-- Replace your existing parts section with this enhanced version -->
                                                            <div class="col-md-6">
                                                                @if (report.Parts != null && report.Parts.Any())
                                                                {
                                                                    <div class="service-section">
                                                                        <h6>
                                                                            <i class="fas fa-cogs me-2"></i>Parts Used
                                                                        </h6>
                                                                        <div class="enhanced-parts-display">
                                                                            @foreach (var part in report.Parts)
                                                                            {
                                                                                <div class="part-card">
                                                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                                                        <div class="flex-grow-1">
                                                                                            <div class="fw-bold">@part.PartName</div>
                                                                                            <div class="part-meta">
                                                                                                @if (!string.IsNullOrEmpty(part.OperationCode))
                                                                                                {
                                                                                                    <span class="operation-code-badge">@part.OperationCode</span>
                                                                                                }
                                                                                                @if (!string.IsNullOrEmpty(part.PartNumber))
                                                                                                {
                                                                                                    <span class="part-number-badge">#@part.PartNumber</span>
                                                                                                }
                                                                                            </div>
                                                                                            @if (!string.IsNullOrEmpty(part.PartDescription))
                                                                                            {
                                                                                                <div class="text-muted small mt-1">@part.PartDescription</div>
                                                                                            }
                                                                                        </div>
                                                                                        <div class="text-end">
                                                                                            <div class="fw-bold">Qty: @part.Quantity</div>
                                                                                            <div class="text-muted small">RM @part.PartPrice.ToString("F2") each</div>
                                                                                        </div>
                                                                                    </div>
                                                                                    <div class="d-flex justify-content-between align-items-center pt-2 border-top">
                                                                                        <span class="text-muted">Part Total:</span>
                                                                                        <span class="badge bg-success">
                                                                                            RM @((part.PartPrice * part.Quantity).ToString("F2"))
                                                                                        </span>
                                                                                    </div>
                                                                                </div>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
