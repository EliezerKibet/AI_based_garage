                                            <div class="d-flex align-items-center w-100">
                                                <div class="me-auto">
                                                    <i class="fas fa-car me-2"></i>
                                                    <strong>
                                                        @carGroup.Car.Make @carGroup.Car.Model
                                                    </strong>
                                                    <span class="car-badge">@carGroup.Car.LicenseNumber</span>
                                                </div>
                                                <span class="badge bg-secondary rounded-pill me-2">
                                                    @carGroup.Reports.Count Report@(carGroup.Reports.Count != 1 ? "s" : "")
                                                </span>
                                            </div>
                                        </button>
