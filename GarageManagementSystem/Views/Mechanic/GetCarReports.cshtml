@using System.Globalization;
@using GarageManagementSystem.ViewModels;
@model MechanicDashboardViewModel

@{
    ViewData["Title"] = "Mechanic Dashboard";
    Layout = "~/Views/Shared/_LayoutMechanic.cshtml";

    // Retrieve query string parameters via ViewContext.HttpContext
    var searchTerm = ViewContext.HttpContext.Request.Query["searchTerm"].ToString();
    var sortOrder = ViewContext.HttpContext.Request.Query["sortOrder"].ToString();

    // Get reports from the model (Reports is List<MechanicReportViewModel>)
    var reports = Model.Reports ?? new List<MechanicReportViewModel>();
    var filteredReports = reports;

    // Filter reports based on search term
    if (!string.IsNullOrEmpty(searchTerm))
    {
        filteredReports = filteredReports
            .Where(r => r.CarMake.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                     || r.CarModel.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                     || r.ServiceDetails.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                     || r.AdditionalNotes.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
            .ToList();
    }

    // Process car reports - if searching, only include cars with matching reports
    var carReportsQuery = Model.Cars
        .AsEnumerable(); // Convert to IEnumerable for in-memory filtering

    if (!string.IsNullOrEmpty(searchTerm))
    {
        // Filter to only include cars that have reports matching the search term
        carReportsQuery = carReportsQuery
            .Where(car => car.Reports.Any(r =>
                (r.DateReported.HasValue) &&
                (r.ServiceDetails.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                 car.Make.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                 car.Model.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                 r.AdditionalNotes.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
            ));
    }
    else
    {
        // If not searching, only include cars with reports
        carReportsQuery = carReportsQuery
            .Where(car => car.Reports.Any(r => r.DateReported.HasValue));
    }

    // Create the final grouping
    var reportsByCar = carReportsQuery
        .Select(car => new
        {
            Car = car,
            Reports = !string.IsNullOrEmpty(searchTerm)
                ? car.Reports
                    .Where(r => r.DateReported.HasValue &&
                              (r.ServiceDetails.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                               car.Make.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                               car.Model.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                               r.AdditionalNotes.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)))
                    .OrderByDescending(r => r.DateReported)
                    .ToList()
                : car.Reports
                    .Where(r => r.DateReported.HasValue)
                    .OrderByDescending(r => r.DateReported)
                    .ToList()
        })
        .ToList();

    // Count total reports for statistics
    var totalReports = reportsByCar.Sum(c => c.Reports.Count);
    var recentReports = reportsByCar.SelectMany(c => c.Reports).Count(r => r.DateReported >= DateTime.Now.AddDays(-7));
    var totalRevenue = reportsByCar.SelectMany(c => c.Reports).Sum(r => r.TotalPrice);

    // Determine if we're showing search results
    var isSearching = !string.IsNullOrEmpty(searchTerm);
}


