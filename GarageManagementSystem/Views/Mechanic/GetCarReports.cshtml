                        </a>
                    </div>
                </div>
            </div>


            <!-- Search Bar -->
            <div class="search-container">
                <!-- Search form that works without JavaScript -->
                <form method="get" action="@Url.Action("GetCarReports", "Mechanic")" class="mb-4">
                    <div class="input-group">
                        <span class="position-absolute ps-3 pt-2" style="z-index: 10;">
                            <i class="fas fa-search text-gray-500"></i>
                        </span>
                        <input type="text" class="form-control ps-5" id="searchInput" name="searchTerm"
                               placeholder="Search cars by make or model..."
                               value="@ViewData["SearchTerm"]">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">
                                Search
                            </button>
                            @if (!string.IsNullOrEmpty(ViewData["SearchTerm"]?.ToString()))
                            {
