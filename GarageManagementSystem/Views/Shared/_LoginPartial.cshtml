@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Users> signInManager;
@inject UserManager<Users> UserManager;

<ul class="navbar-nav ms-auto d-flex align-items-center">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="btn btn-danger text-white px-4 py-2 me-2" asp-controller="Account" asp-action="Logout">
                Logout
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-primary text-white px-4 py-2 me-2" asp-controller="Account" asp-action="Login">
                Login
            </a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-primary text-primary px-4 py-2" asp-controller="Account" asp-action="Register">
                Register
            </a>
        </li>
    }
</ul>
